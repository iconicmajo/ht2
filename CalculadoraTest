import org.junit.After;
import org.junit.AfterClass;
import org.junit.Before;
import org.junit.BeforeClass;
import org.junit.Test;
import static org.junit.Assert.*;

/**
 *
 * @author Gerardo
 */
public class CalculadoraTest 
{
    
    public CalculadoraTest() 
    {
    
    }
    
    @BeforeClass
    public static void setUpClass() 
    {
    
    }
    
    @AfterClass
    public static void tearDownClass() 
    {
    
    }
    
    @Before
    public void setUp() 
    {
    
    }
    
    @After
    public void tearDown() 
    {
    
    }

    /**
     * Test of sumar method, of class Calculadora.
     * Recibe dos numeros double y el metodo double los suma, compara resultados
     */
    @Test
    public void testSumar() 
    {
        System.out.println("sumar");
        double n1 = 5.0;
        double n2 = 8.0;
        Calculadora instance = new Calculadora();
        double expResult = 13.0;
        double result = instance.sumar(n1, n2);
        assertEquals(expResult, result, 0.0);
    }

    /**
     * Test of restar method, of class Calculadora.
     * Recibe dos numeros double y el metodo double los resta, compara resultados
     */
    @Test
    public void testRestar() 
    {
        System.out.println("restar");
        double n1 = 5.0;
        double n2 = 8.0;
        Calculadora instance = new Calculadora();
        double expResult = -3.0;
        double result = instance.restar(n1, n2);
        assertEquals(expResult, result, 0.0);
    }

    /**
     * Test of multiplicar method, of class Calculadora.
     * Recibe dos numeros double y el metodo double los multiplica, compara resultados
     */
    @Test
    public void testMultiplicar() 
    {
        System.out.println("multiplicar");
        double n1 = 5.0;
        double n2 = 8.0;
        Calculadora instance = new Calculadora();
        double expResult = 40.0;
        double result = instance.multiplicar(n1, n2);
        assertEquals(expResult, result, 0.0);
    }

    /**
     * Test of dividir method, of class Calculadora.
     * Recibe dos numeros double y el metodo double los divide, compara resultados
     */
    @Test
    public void testDividir() 
    {
        System.out.println("dividir");
        double n1 = 5.0;
        double n2 = 8.0;
        Calculadora instance = new Calculadora();
        double expResult = 0.625;
        double result = instance.dividir(n1, n2);
        assertEquals(expResult, result, 0.0);
    }  
}
